<% if flash[:error]%>
  <p style="background: red; padding: 8px; color: white; font-weight: bold;"><%= flash[:error] %></p>
<% end %>

<% form_tag do %>
  <p>Username: <%= text_field_tag(:username, @username) %></p>
  <p>Password: <%= password_field_tag(:password) %></p>
  <p><%= submit_tag("Login")%></p>
<% end %>